<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="#FFF5E8"
    tools:context=".FinnishActivity">

    <TextView
        android:id="@+id/tvFinnishTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Finnish Language"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#222"
        android:fontFamily="serif"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvIntro"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Finnish was one of the hardest languages for me, but also one of the most interesting!\nHere are a few things I picked up during my Erasmus."
        android:textColor="#444"
        android:textSize="18sp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/tvFinnishTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <TextView
        android:id="@+id/tvFavTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Favorite Finnish Words"
        android:textStyle="bold"
        android:fontFamily="serif"
        android:textSize="20sp"
        android:textColor="#222"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/tvIntro"
        app:layout_constraintStart_toStartOf="parent" />


    <TextView
        android:id="@+id/tvFavWords"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="• Moi – Hello\n• Kiitos – Thank you\n• Kippis – Cheers!\n• Moikka – Bye \n• Ammattikorkeakoulu – University of Applied Science \n• Anteeksi – Excuse me"
        android:textColor="#444"
        android:textSize="18sp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/tvFavTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/ivHelsinki"
        android:layout_width="442dp"
        android:layout_height="299dp"
        android:layout_marginTop="52dp"
        android:scaleType="centerCrop"
        android:src="@drawable/helsinki"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvFavWords" />
</androidx.constraintlayout.widget.ConstraintLayout>
